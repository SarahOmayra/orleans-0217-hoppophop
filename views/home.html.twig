{% extends "base.html.twig" %}
{% block title %}Projet{% endblock %}
{% block content %}
    {%  if breakingNews>0 %}
        <div class="news-top text-center font-default" id="breaking-news">
            <h2 class="news-topText">
                Attention, information de dernière minute : La Jungle ne pourra pas être présent.
                <a class="cross glyphicon glyphicon-remove news-remove" onclick="$('#breaking-news').addClass('delete')"></a>
            </h2>
        </div>
    {% endif %}
    <div class="container text-center">
        <div class="row">
            <div class="col-xs-6 col-xs-offset-3">
                <img src="../src/img/logo-only.png" alt="Logo du Festival" class="img-responsive logo-big">
                <br />
                <br />
            </div>
            <h1 class="separator-title font-dokyo">PROGRAMMATION</h1>
            <hr class="hr">
            <div class="separator-div text-justify">
                {%  for i in range(0,29) %}
                    {% if i%2 == 0 and i<29 %}
                        <p class="home-prog"><a href="../index.php?page=artiste" class="home-link link-orange font-circula">Chuck Berry</a> <span class="orange">/</span></p>
                    {% elseif i%2 != 0 and i<29 %}
                        <p class="home-prog"><a href="../index.php?page=artiste" class="home-link link-turquoise font-circula">Chuck Berry</a> <span class="turquoise">/</span></p>
                    {% else %}
                        <p class="home-prog"><a href="../index.php?page=artiste" class="home-link link-turquoise font-circula">Chuck Berry</a></p>
                    {% endif %}
                {% endfor %}
            </div>
            <h1 class="separator-title font-dokyo">BILLETTERIE</h1>
            <hr class="hr">
            <div class="separator-div home-ticket">
                <h2 class="font-circula"><i class="fa fa-ticket" aria-hidden="true"></i> Pass 1 Journée ou 2 Jours disponibles</h2>
                <a href="../index.php?page=billetterie" class="btn btn-primary">Accéder à la Billetterie</a>
            </div>
            <h1 class="separator-title font-dokyo">ACTUALITES</h1>
            <hr class="hr">
            <div class="separator-div">
                <div class="container-fluid">
                    <div class="row">
                        {%  for i in range(0,2) %}
                            <div class="col-xs-12 col-xs-offset-0 col-sm-4">
                                <div class="content-div text-justify">
                                    <img src="../src/img/chuck.png" class="img-responsive">
                                    <h2 class="font-circula">{{ title }}</h2>
                                    <hr class="hr">
                                    <p>{{ text }}</p>
                                </div>
                                <br />
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}