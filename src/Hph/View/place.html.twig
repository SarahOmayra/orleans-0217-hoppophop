{% extends "base.html.twig" %}
{% block title %}Lieux{% endblock %}
{% block titleMobile %}Lieux{% endblock %}
{% block content %}
    <div class="container text-center">
        <div class="row">
            {%  for place in places %}
                <div class="col-xs-6 col-sm-4">
                    <div class="thumbnail thumbnail-div lieux-thumbnail">
                        <a href="{{ place.url }}">
                            <img src="../../../web/img/{{ place.img }}" class="img-responsive places-img">
                            <h3 class="thumbnail-title font-circula">{{ place.name }}</h3>
                        </a>
                    </div>
                </div>
            {% endfor %}
            <div class="col-xs-12">
                <hr class="hr">
                <br />
