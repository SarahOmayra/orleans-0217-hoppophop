{% extends "base.html.twig" %}
{% block title %}Lieux{% endblock %}
{% block content %}
    <div class="container">
        <h2 class="text-center">Ajouter un lieu</h2>
        <hr/>
        {% if error==2 %}
            <div class="alert alert-danger" role="alert">Le nom ou le lien d'un lieu doit être une chaîne de caractères</div>
        {% elseif error==3 %}
            <div class="alert alert-danger" role="alert">La taille du nom d'un lieu ne peut pas dépasser 30 caractères</div>
        {% elseif error==0 %}
            <div class="alert alert-danger" role="alert">Une erreur s'est produite lors de l'insertion dans la base de données</div>
        {% elseif error==4 %}
            <div class="alert alert-danger" role="alert">L'extension n'est pas valide</div>
        {% elseif error==5 %}
            <div class="alert alert-danger" role="alert">La taille de l'image est trop élevé</div>
        {% elseif error==6 %}
            <div class="alert alert-danger" role="alert">Le poids de l'image est trop élevé</div>
        {% elseif error==0 %}
            <div class="alert alert-danger" role="alert">Une erreur s'est produite lors de l'insertion dans la base de données</div>
        {% elseif error==7 %}
            <div class="alert alert-danger" role="alert">Le format de la date est incorrect</div>
        {% endif %}
        <form method="POST" action="../../../../admin/admin.php?page=addPlace" enctype="multipart/form-data">
            <div class="form-group">
                <label for="name">Nom du lieux</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Entrez le nom du lieu" required>
            </div>
            <div class="form-group">
                <label for="url">Lien du lieux</label>
                <input type="text" class="form-control" id="url" name="url" placeholder="Entrez le lien du lieu" required>
            </div>
            <div class="form-group">
                <label for="start">Heure d'ouverture du lieu</label>
                <input type="text" class="form-control" placeholder="Format : YYYY-MM-DD HH:MM:SS" id="start" name="start" required>
            </div>
            <div class="form-group">
                <label for="start">Heure de fermeture du lieu</label>
                <input type="text" class="form-control" placeholder="Format : YYYY-MM-DD HH:MM:SS" id="end" name="end" required>
            </div>
            <div class="form-group">
                <label for="img">Photo du lieu</label>
                <input type="file" id="img" name="img" required>
                <p class="help-block">Aide à la photo</p>
            </div>
            <div class="checkbox">
                <label>
                    <input type="checkbox" name="showcase" value="1">Showcase
                </label>
            </div>
            <div class="text-center">
                <input type="submit" name="submit" class="btn btn-primary" value="Créer">
            </div>
        </form>
        <br />
        <h2 class="text-center">Liste des lieux</h2>
        <hr />
        <table class="table table-hover">
            <thead>
            <tr>
                <th>#</th>
                <th>Nom</th>
                <th>Url</th>
                <th>Image</th>
                <th>Début</th>
                <th>Fin</th>
                <th>Showcase</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {%  for place in places %}
                <tr>
                    <th scope="row">{{ place.id }}</th>
                    <td>{{ place.name }}</td>
                    <td><a href="http://{{ place.url }}">{{ place.url }}</a></td>
                    <td><img src="../../../../web/img/place/{{ place.imgPlace }}" alt="Image du lieux" class="img-list"></td>
                    <td>{{ place.start|localizeddate('long', 'short', 'fr') }}</td>
                    <td>{{ place.end|localizeddate('long', 'short', 'fr') }}</td>
                    <td>
                        {% if place.showcase==1 %}
                            Oui
                        {% else %}
                            Non
                        {% endif %}
                    </td>
                    <td>
                        <button type="button" class="btn btn-success" data-toggle="modal" data-target="#edit{{ place.id }}"><i class="fa fa-pencil"></i></button>
                        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#delete{{ place.id }}"><i class="fa fa-trash-o"></i></button>
                    </td>
                </tr>
                <div class="modal fade" id="edit{{ place.id }}" tabindex="-1" role="dialog">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                <h4 class="modal-title">Modifier un lieux</h4>
                            </div>
                            <form method="POST" action="../../../../admin/admin.php?page=updatePlace" enctype="multipart/form-data">
                                <div class="modal-body">
                                    <div class="form-group">
                                        <label for="name">Nom du lieux</label>
                                        <input type="text" class="form-control" id="name" name="name" placeholder="Entrez le nom du lieu" value="{{ place.name }}" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="url">Lien du lieux</label>
                                        <input type="text" class="form-control" id="url" name="url" placeholder="Entrez le lien du lieu" value="{{ place.url }}" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="start">Heure d'ouverture du lieu</label>
                                        <input type="text" class="form-control" placeholder="Format : YYYY-MM-DD HH:MM:SS" id="start" name="start" value="{{ place.start }}" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="start">Heure de fermeture du lieu</label>
                                        <input type="text" class="form-control" placeholder="Format : YYYY-MM-DD HH:MM:SS" id="end" name="end" value="{{ place.end }}" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="img">Photo du lieu</label>
                                        <input type="file" id="img" name="img" required>
                                        <p class="help-block">Aide à la photo</p>
                                    </div>
                                    <div class="checkbox">
                                        <label>
                                            {% if place.showcase==1 %}
                                                <input type="checkbox" name="showcase" value="{{ place.showcase }}" checked>Showcase
                                            {% else %}
                                                <input type="checkbox" name="showcase" value="{{ place.showcase }}">Showcase
                                            {% endif %}
                                        </label>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <input type="hidden" name="id" value="{{ place.id }}">
                                    <input type="submit" name="submit" class="btn btn-primary" value="Modifier">
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="modal fade" id="delete{{ place.id }}" tabindex="-1" role="dialog">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                <h4 class="modal-title">Supprimer un lieu</h4>
                            </div>
                            <div class="modal-body">
                                Êtes-vous sûr de vouloir supprimer le lieu {{ place.name }} ?
                            </div>
                            <div class="modal-footer">
                                <form method="POST" action="../../../../admin/admin.php?page=deletePlace">
                                    <input type="hidden" name="id" value="{{ place.id }}">
                                    <input type="submit" name="submit" class="btn btn-danger" value="Oui">
                                </form>
                                <button class="btn btn-default" data-dismiss="modal">Non</button>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}