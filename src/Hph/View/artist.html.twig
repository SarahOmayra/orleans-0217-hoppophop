{% extends "base.html.twig" %}
{% block title %}Artiste{% endblock %}
{% block titleMobile %}ARTISTE{% endblock %}
{% block content %}
<link href="https://cdn.rawgit.com/michalsnik/aos/2.1.1/dist/aos.css" rel="stylesheet">
<script src="https://cdn.rawgit.com/michalsnik/aos/2.1.1/dist/aos.js"></script>
<script> AOS.init(); </script>
<div class="container hidden-xs">
    <div class="row">
        <div class="col-xs-8">
            <div class="content-div">
                <h1 class="font-circula upper">{{ artist.name }}</h1>

                <p>{{ artist.bio }}</p>

                <div class="artiste-tag upper">
                    {% for tag in tags %}

                        {% if loop.index%2 == 0 and loop.index<tags|length %}
                          <div class="font-circula tag_artist"> {{ tag.name }} <span class="orange">/</span></div>
                        {% elseif loop.index%2 != 0 and loop.index<tags|length %}                                                                    <div class="font-circula tag_artist"> {{ tag.name }} <span class="turquoise">/</span></div>
                        {% elseif loop.index%2 != 0 %}
                          <div class="font-circula tag_artist"> {{ tag.name }}</div>
                        {% else %}
                          <div class="font-circula tag_artist"> {{ tag.name }}</div>



                        {% endif %}
                    {% endfor %}
                </div><br>
                <hr class="hr">


            </div>
            <br />

          <iframe width="100%" height="480" src="{{ artist.videoUrl }}" frameborder="0" allowfullscreen></iframe>

        </div>
        <div class="col-xs-4">
            <div class="content-div upper">
                <img src="../web/img/artist/{{ artist.imgArtist }}" class="img-responsive">
                <div class="text-center">
                    <h2 class="font-circula">Vendredi 16 Septembre</h2>
                    <hr class="hr-small">
                    <h3 class="font-circula"> {{ place.name }} </h3>
                    <h4 class="font-circula">{{ concert.concert_start | date("d / m / Y") }} <span class="turquoise bold">|</span> {{ concert.concertEnd }}</h4>
                </div>


            </div>
            <hr class="hr">
            <div class="artiste-social text-center">
                <a href="{{ artist.facebookUrl }}"><i class="fa fa-facebook-square social-logo" aria-hidden="true"></i></a>
                <a href="{{ artist.twitterUrl }}"><i class="fa fa-twitter-square social-logo" aria-hidden="true"></i></a>

                <a href="#"><i class="fa fa-spotify social-logo" aria-hidden="true"></i></a>
                <a href="{{ artist.youtubeUrl }}"><i class="fa fa-youtube-square social-logo" aria-hidden="true"></i></a>
            </div>
        </div>
    </div>
</div>
<div class="visible-xs container">
    <div class="col-xs-12">
        <div class="content-div">
            <img src="../web/img/artist/{{ artist.imgArtist }}" class="img-responsive">
            <h1 class="font-circula">{{ artist.name }}</h1>
          <p>{{ artist.bio }}</p>
            <div class="artiste-tag">
                <h4 class="font-circula">France <span class="turquoise">/</span> Rouquins <span class="orange">/</span> Six-Cordes</h4>
            </div>
            <hr class="hr">
            <div class="text-center">
                <h2 class="font-circula">VENDREDI 16 SEPTEMBRE</h2>
                <h3 class="font-circula">JARDIN DE L'EVECHE</h3>
                <h4 class="font-circula">21H35 <span class="turquoise bold">|</span> 22H35</h4>
            </div>
            <hr class="hr">
            <div class="artiste-social text-center">
                <a href="{{ artist.facebookUrl }}"><i class="fa fa-facebook-square social-logo" aria-hidden="true"></i></a>
                <a href="{{ artist.twitterUrl }}"><i class="fa fa-twitter-square social-logo" aria-hidden="true"></i></a>

                <a href="#"><i class="fa fa-spotify social-logo" aria-hidden="true"></i></a>
                <a href="{{ artist.youtubeUrl }}"><i class="fa fa-youtube-square social-logo" aria-hidden="true"></i></a>
            </div>
            <iframe width="100%" height="200" src="{{ artist.videoUrl }}" frameborder="0" allowfullscreen></iframe>
        </div>
    </div>
</div>
{% endblock %}