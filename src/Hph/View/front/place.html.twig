{% extends "base.html.twig" %}
{% block title %}Lieux{% endblock %}
{% block titleMobile %}LIEUX{% endblock %}
{% block content %}
    <div class="container text-center">
        <div class="row">
            <h2 class="white font-circula">Lieux du Festival</h2>
            <p class="text-center">Les pass du festival vous donnent accès aux 6 lieux du festival et à tous les
                concerts </p>
            {% for place in places %}
                {% if place.showcase == 0 %}
                    <div class="col-xs-6 col-sm-4">
                        <div class="thumbnail thumbnail-div">
                            <a href="{{ place.url }}">
                                <img src="../../../img/place/{{ place.imgPlace }}" class="img-responsive">
                                <h3 class="thumbnail-title font-circula">{{ place.name }}</h3>
                            </a>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
        </div>
        <div class="row">
            <hr class="hr-min">
            <h2 class="white font-circula">Showcases</h2>
            {% for place in places %}
                {% if place.showcase == 1 %}
                    <div class="col-xs-6 col-sm-4">
                        <div class="thumbnail thumbnail-div">
                            <a href="{{ place.url }}">
                                <img src="../../../img/place/{{ place.imgPlace }}" class="img-responsive">
                                <h3 class="thumbnail-title font-circula">{{ place.name }}</h3>
                            </a>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
        </div>
        <div class="row">
            <div class="col-xs-12">
                <hr class="hr">
                <h2 class="white font-circula">Carte</h2>
                <iframe src="https://www.google.com/maps/d/embed?mid=1mGMqNYvqQ9GoBDmQ8iGEKu7xvYQ" width="100%"
                        height="750px" class="hidden-xs"></iframe>
                <iframe src="https://www.google.com/maps/d/embed?mid=1mGMqNYvqQ9GoBDmQ8iGEKu7xvYQ" width="100%"
                        height="250px" class="visible-xs"></iframe>
            </div>
        </div>
    </div>
{% endblock %}