{% extends "base.html.twig" %}
{% block title %}Artiste{% endblock %}
{% block titleMobile %}ARTISTE{% endblock %}
{% block content %}
    <div class="container hidden-xs">
        <div class="row">
            <div class="col-xs-8">
                <div class="content-div">
                    <h1 class="font-circula upper">{{ artist.name }}</h1>
                    <p>{{ artist.bio }}</p>
                    <div class="artiste-tag upper">
                        {% for tag in tags %}
                            {% if loop.index%2 == 0 and loop.index<tags|length %}
                                <h2 class="font-circula tag_artist"> {{ tag.name }} <span class="orange">/</span></h2>
                            {% elseif loop.index%2 != 0 and loop.index<tags|length %}
                                <h2 class="font-circula tag_artist"> {{ tag.name }} <span class="turquoise">/</span></h2>
                            {% elseif loop.index%2 != 0 %}
                                <h2 class="font-circula tag_artist"> {{ tag.name }}</h2>
                            {% else %}
                                <h2 class="font-circula tag_artist"> {{ tag.name }}</h2>
                            {% endif %}
                        {% endfor %}
                    </div>
                    <hr class="hr">
                </div>
                <iframe width="100%" height="480" src="{{ artist.videoUrl }}" frameborder="0" allowfullscreen></iframe>
            </div>
            <div class="col-xs-4">
                <div class="content-div upper text-center">
                    <img src="../../../img/artist/{{ artist.imgArtist }}" class="img-responsive center-img">
                    <hr class="hr">
                    {% for prog in progs %}
                        {% if prog.showcase == 0  %}
                            <div class="text-center">
                                <h3 class="font-circula">{{prog.concert_start |  localizeddate('long', 'none', 'fr')}}</h3>
                                <hr class="hr-small">
                                <h3 class="font-circula prog_place"><a class="white" href="{{ prog.url }}" >{{ prog.name }}</a> </h3>
                                <h3 class="font-circula prog_hour">{{ prog.concert_start  | localizeddate('none', 'short', 'fr') }} <span class="turquoise bold">|</span> {{ prog.concert_end | localizeddate('none', 'short', 'fr') }}</h3>
                            </div>
                        {% endif %}
                        {% if prog.showcase == 1  %}
                            <div class="showcase">
                                <h2 class="font-circula">{{prog.concert_start |  localizeddate('long', 'none', 'fr')}}</h2>
                                <hr class="hr-small">
                                <h3 class="font-circula white text-center showcase">SHOWCASE :</h3>
                                <h3 class="white text-center showcase">
                                    {{ prog.name }}
                                </h3>
                                <h3 class="font-circula white text-center prog_hour">
                                    {{ prog.concert_start | localizeddate('none', 'short', 'fr') }}
                                    <span class="turquoise bold">|</span>
                                    {{ prog.concert_end | localizeddate('none', 'short', 'fr') }}
                                </h3>
                            </div>
                        {% endif %}
                        <hr class="hr">
                    {% endfor %}
                </div>
                <div class="artiste-social text-center">
                    {% if not artist.facebookUrl is empty  %}
                        <a href="{{ artist.facebookUrl }}"><i class="fa fa-facebook-square social-logo" aria-hidden="true"></i></a>
                    {% endif %}
                    {% if not artist.twitterUrl is empty   %}
                        <a href="{{ artist.twitterUrl }}"><i class="fa fa-twitter-square social-logo" aria-hidden="true"></i></a>
                    {% endif %}
                    {% if not artist.spotifyUrl is empty   %}
                        <a href="{{ artist.spotifyUrl }}"><i class="fa fa-spotify social-logo" aria-hidden="true"></i></a>
                    {% endif %}
                    {% if not artist.youtubeUrl is empty   %}
                        <a href="{{ artist.youtubeUrl }}"><i class="fa fa-youtube-square social-logo" aria-hidden="true"></i></a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
    <div class="visible-xs container">
        <div class="col-xs-12">
            <div class="content-div text-center">
                <img src="../../../img/artist/{{ artist.imgArtist }}" class="img-responsive">
                <h1 class="font-circula">{{ artist.name }}</h1>
                <p>{{ artist.bio }}</p>
                <div class="artiste-tag">
                    {% for tag in tags %}
                        {% if loop.index%2 == 0 and loop.index<tags|length %}
                            <h2 class="font-circula tag_artist"> {{ tag.name }} <span class="orange">/</span></h2>
                        {% elseif loop.index%2 != 0 and loop.index<tags|length %}
                            <h2 class="font-circula tag_artist"> {{ tag.name }} <span class="turquoise">/</span></h2>
                        {% elseif loop.index%2 != 0 %}
                            <h2 class="font-circula tag_artist"> {{ tag.name }}</h2>
                        {% else %}
                            <h2 class="font-circula tag_artist"> {{ tag.name }}</h2>
                        {% endif %}
                    {% endfor %}
                </div>
                <hr class="hr">
                {% for prog in progs %}
                    <div class="text-center">
                        <h3 class="font-circula">{{ prog.concert_start | localizeddate('long', 'none', 'fr') }}</h3>
                        <h3 class="font-circula prog_place"><a class="white" href="{{ prog.url }}" >{{ prog.name }}</a></h3>
                        <h3 class="font-circula prog_hour">{{ prog.concert_start | localizeddate('none', 'short', 'fr') }} <span class="turquoise bold">|</span> {{ prog.concert_end | localizeddate('none', 'short', 'fr') }}</h3>
                        {% if not prog.showcase ==0  %}
                            <hr class="hr-small">
                            <div class="showcase">
                                <h3 class="font-circula white text-center showcase">
                                    SHOWCASE :
                                </h3>
                                <h3 class="white text-center showcase">
                                    {{ prog.name }}
                                </h3>
                                <h3 class="font-circula white text-center prog_hour">
                                    {{ prog.concert_start | localizeddate('none', 'short', 'fr') }}
                                    <span class="turquoise bold">|</span>
                                    {{ prog.concert_end | localizeddate('none', 'short', 'fr') }}
                                </h3>
                            </div>
                        {% endif %}
                        <hr class="hr-min">
                    </div>
                {% endfor %}
                <div class="artiste-social text-center">
                    {% if not artist.facebookUrl is empty  %}
                        <a href="{{ artist.facebookUrl }}"><i class="fa fa-facebook-square social-logo" aria-hidden="true"></i></a>
                    {% endif %}
                    {% if not artist.twitterUrl is empty   %}
                        <a href="{{ artist.twitterUrl }}"><i class="fa fa-twitter-square social-logo" aria-hidden="true"></i></a>
                    {% endif %}
                    {% if not artist.spotifyUrl is empty   %}
                        <a href="{{ artist.spotifyUrl }}"><i class="fa fa-spotify social-logo" aria-hidden="true"></i></a>
                    {% endif %}
                    {% if not artist.youtubeUrl is empty   %}
                        <a href="{{ artist.youtubeUrl }}"><i class="fa fa-youtube-square social-logo" aria-hidden="true"></i></a>
                    {% endif %}
                </div>
                <hr class="hr">
                <iframe width="100%" height="200" src="{{ artist.videoUrl }}" frameborder="0" allowfullscreen></iframe>
            </div>
        </div>
    </div>
{% endblock %}